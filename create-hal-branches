current_rom_version=8.0
new_rom_version=8.1
for chipset in 8916 8960 8974 8994 8996 8998;do
  for hal in audio media display; do
    cd ${hal}-caf/msm${chipset}
    git fetch XOS XOS-${current_rom_version}-caf-${chipset}
    git reset --hard FETCH_HEAD
    xg
    git checkout -b XOS-${new_rom_version}-caf-${chipset}
    git push gerrit --force HEAD:XOS-${new_rom_version}-caf-${chipset}
    cd ~/xossrc/hardware/qcom/
  done
done
